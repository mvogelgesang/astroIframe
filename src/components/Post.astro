---
interface Props {
  title: string;
  generator: string;
}

const { title, generator } = Astro.props;
---

<article>
  <h1>{title}</h1>
  <p>Generated with <a href={generator}>{generator}</a></p>

  <slot />
</article>

<style>
  article {
    color: #e7eeff;
    max-width: 34rem;
    margin: 0 auto;
    font-size: 1.1rem;
    line-height: 1.3rem;
    
  }
  a {
    text-decoration: none;
    line-height: 1.4;
    border-radius: 8px;
    color: rgb(182, 255, 169);
  }
  h2 {
    margin: 0;
    font-size: 1.25rem;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
    line-height: 1.2rem;
    color: white;
  }
</style>
