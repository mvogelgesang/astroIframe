<div class="nav-links">
  <a href={import.meta.env.BASE_URL}>Home</a>
  <a href=`${import.meta.env.BASE_URL}/posts`>Posts</a>
</div>

<style>
  .nav-links {
  width: 100%;
  top: 5rem;
  left: 48px;
  color: #cc96ff;
  background-color: #fff7f5;
  display: none;
  margin: 0;
}

.nav-links a {
  color: #cc96ff;
  display: block;
  text-align: center;
  padding: 10px 0;
  text-decoration: none;
  font-size: 1.2rem;
  font-weight: bold;
  text-transform: uppercase;
}

.nav-links a:hover,
.nav-links a:focus {
  background-color: #fffaf8;
  color: #6401c0;
}

.expanded {
  display: unset;
}

@media screen and (min-width: 636px) {
  .nav-links {
    margin-left: 5em;
    display: block;
    position: static;
    width: auto;
    background: none;
  }

  .nav-links a {
    display: inline-block;
    padding: 15px 20px;
  }

}
</style>